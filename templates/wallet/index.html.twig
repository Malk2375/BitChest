{% extends 'base.html.twig' %}

{% block title %}Hello WalletController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		li {
			list-style-type: none;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ app.user.fullName }}! ✅</h1>
		<h3>This is your wallet</h3>
		<ul>
			<li>
				<a type="button" class="btn btn-info" href="{{ path('user.profil', {'id': app.user.id})}}">Profil</a>
			</li>
			<li>
				<div class="card border-success mb-3  mt-4" style="max-width: 20rem;">
					<div class="card-header">Account info</div>
					<div class="card-body">
						<h4 class="card-title">Solde</h4>
						<p class="card-text">Your solde is :
							{{app.user.wallet.solde}}
							€</p>
					</div>
					{% if userCryptoAmounts is not null %}
						<div class="card-body">
							<h4 class="card-title">Crypto</h4>
							{% for cryptoName, amount in userCryptoAmounts %}
								<p class="card-text">{{ cryptoName }}:
									{{ amount }}
								</p>
							{% endfor %}
						{% else %}
							<h4 class="card-title">Crypto</h4>
							<p class="card-text">User has no crypto amounts.</p>
						</div>
					{% endif %}
				</div>
			</li>
		</ul>
	</div>
{% endblock %}
