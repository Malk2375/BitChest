{% extends 'base.html.twig' %}

{% block title %}BitChest - EditProfile
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="mt-4">Profile  ✅
			{% if is_granted('ROLE_ADMIN') %}
				ADMIN ⭐
			{% endif %}
		</h1>
		<h3>
			Name :</h3>
		<p>{{user.fullName}}</p>
		<h3>
			Email :</h3>
		<p>{{user.email}}</p>
	</div>
{% endblock %}
