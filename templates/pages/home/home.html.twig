{% extends 'base.html.twig' %}

{% block title %}BitChest!
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="jumbotron">
			{% if not app.user %}
				<h1 class="display-4">Hello, Bienvenue sur BitChest App ✅
				</h1>
				<hr class="my-4">
			{% endif %}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}
			{% if app.user %}
				<h2>Bonjour,
					{{ app.user.fullName }}
					✅
				</h2>

			{% endif %}
			{% if not app.user %}
				<p>Rendez-vous sur la page de connexion pour utiliser l'application
				</p>
				<p class="lead">
					<a class="btn btn-primary btn-lg" href="/login" role="button">Se connecter
					</a>
				</p>
			{% endif %}
			<p class="lead">
				{% if is_granted('ROLE_ADMIN') %}
					<p>Create a new User
					</p>
					<a class="btn btn-primary btn-lg" href="/register" role="button">Create</a>
				{% endif %}
			</p>
		</div>
	</div>
{% endblock %}
