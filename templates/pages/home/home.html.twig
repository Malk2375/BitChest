{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="jumbotron">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}
			<h1 class="display-4">Hello, Bienvenue sur BitChest App âœ…
			</h1>
			<hr class="my-4">
			{% if app.user %}
				<h2>Bonjour,
					{{ app.user.fullName }}!</h2>
			{% endif %}
			{% if not app.user %}
				<p>Rendez-vous sur la page d'inscription pour utiliser l'application
				</p>
				<p class="lead">
					<a class="btn btn-primary btn-lg" href="/register" role="button">Inscrivez Vous
					</a>
				</p>
				<p class="lead">
					<a class="btn btn-primary btn-lg" href="/login" role="button">Connectez vous
					</a>
				</p>
			{% endif %}
		</div>
	</div>
{% endblock %}
